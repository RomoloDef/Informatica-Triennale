.data
vettore: .word 0,1,2,3,4,5
numeroelementi: .word 6
output: .asciiz "il successivo Ã¨ maggiore del precedente"

.text
.globl main

main:
	li $t0, 0
	lw $t1, numeroelementi
	
ciclo:
	bge $t0, $t1, fine
	mul $t2, $t0 4
	lw $t3, vettore($t2)
	addi $t0, $t0, 1
	mul $t2, $t0, 4
	lw $t4, vettore($t2)
	bgt $t4, $t3, controllo
	addi $t0, $t0, 1
	j ciclo
	
controllo:
	la $a0, output
	li $v0, 4
	syscall
	j fine
	
fine:
	li $v0, 10
	syscall