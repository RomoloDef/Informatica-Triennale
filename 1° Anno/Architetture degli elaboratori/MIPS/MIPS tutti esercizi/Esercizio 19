# Dati due dadi con facce numerate da 0 a 5. Lanciare tre dadi e scrivere su videoterminale se è uscito un tris, una coppia o tutti valori diversi

.text
.globl main

main:
	# generazione primo numero
	li $v0, 42	# codice sycall per genrazione di numero casuale
	li $a1, 6	# massimo valore ottenibile
	syscall	
	move $t0, $a0	# sposto valore nel registro t0
	
	# generazione secondo numero
	li $v0, 42	# codice sycall per genrazione di numero casuale
	li $a1, 6	# massimo valore ottenibile
	syscall	
	move $t1, $a0	# sposto valore nel registro t0
	
	# generazione terzo numero
	li $v0, 42	# codice sycall per genrazione di numero casuale
	li $a1, 6	# massimo valore ottenibile
	syscall	
	move $t2, $a0	# sposto valore nel registro t0
	
	beq $t1, $t0, COPPIA		# se i due valori generati sono uguali allora passa a COPPIA
	
	la $a0, messaggio_diverso
    	li $v0, 4
    	syscall
    	j fine
	
COPPIA:
	la $a0, messaggio_coppia
	li $v0, 4
	syscall
	beq $t2, $t1, TRIS
	j fine

TRIS: 
	la $a0, messaggio_tris
	li $v0, 4
	syscall
	j fine
	
fine: 
	li $v0, 10
	syscall
	
	
.data
messaggio_coppia: .ascii "è uscita una coppia\n"
messaggio_tris: .ascii "è uscito un tris\n"
messaggio_diverso: .ascii "i valori sono tutti diversi"