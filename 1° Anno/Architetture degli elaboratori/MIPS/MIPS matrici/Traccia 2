# Definire una matrice 5x5 di halfword. Realizzare un programma in linguaggio assemblativo che consente ad un utente di inserire da tastiera il numero di riga ed il numero di colonna e visualizzare su schermo l'elemento.

.data
matrice: .half 2:25
tabulato: .asciiz "\t"
riga: .asciiz "\n"

.text
.globl main

main:
	li $t0, 1	# indice righe
	li $t1, 1	# indice colonne
	
	li $v0, 5	# lettura numero righe
	syscall
	move $a0, $v0
	move $t2, $a0
	
	li $v0, 5	# lettura numero colonne
	syscall
	move $a1, $v0
	move $t3, $a1
	
analisi_riga:
	li $t1, 1
	
analisi_colonna:
	# faccio la formula per calcolare l'elemento
	# r,c = C(r-1) + (c-1)
	sub $t6, $t0, 1
	mul $t9, $t6, $t3
	sub $t7, $t1, 1
	add $t9, $t9, $t7
	# ora bisogna prelevare l'elemento
	lb $t8,matrice($t9) 
	move $a0,$t8 	#stampa elemento
	li $v0,1 
	syscall 
	la $a0,tabulato #stampa tabulato
	li $v0,4
	syscall
	# bisogna, per andare avanti, incrementare righe e colonne
	# parto dalle colonne
	addi $t1, $t1, 1
	# verifico se la colonna corrente Ã¨ minore del numero totale
	ble $t1, $t3, analisi_colonna
	la $a0, riga
	li $v0, 4
	syscall
	# incremento righe
	addi $t0, $t0, 1
	ble $t0, $t2, analisi_riga
	li $v0, 10
	syscall