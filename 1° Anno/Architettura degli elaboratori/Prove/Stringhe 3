.data
stringa: .asciiz "Ciao a tutti"

.text
.globl main

main:
	xor $t0, $t0, $t0
	li $v0, 12
	syscall
	move $t1, $v0		# carattere search
	li $v0, 12
	syscall
	move $t2, $v0		# carattere replace
	
ciclo:
	lb $t9, stringa($t0)
	beq $t9, $zero, fine
	beq $t9, $t1, sostituzione
	j continua

sostituzione: 
	sb $t2, stringa($t0)
	j ciclo
	
continua:
	addi $t0, $t0, 1
	j ciclo
	
fine:
	li $v0, 10
	syscall
	