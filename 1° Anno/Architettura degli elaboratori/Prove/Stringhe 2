.data
stringa: .asciiz "Ciao a tutti"

.text
.globl main

main:
	xor $t0, $t0, $t0
	li $v0, 12
	syscall
	move $t1, $a0
	
primo_controllo:
	li $t2, 65
	bge $t1, $t2, secondo_controllo
	j fine
	
secondo_controllo:
	li $t3, 122
	ble $t1, $t3, ciclo
	j fine
	
ciclo:
	lb $t9, stringa($t0)
	beq $t9, $t1, fine
	addi $t0, $t0, 1
	j ciclo
	
fine:
	move $a0, $t0
	li $v0, 1
	syscall
	li $v0, 10
	syscall