.data
vettore: .space 40
numelem: .word 10
tabulato: .asciiz "\n"

.text
.globl main

main:
	li $t0, 0	# indice vettore
	lw $t1, numelem	# numero di elementi del vettore
	
ciclo:
	li $v0, 5
	syscall
	move $t2, $v0
	mul $t3, $t0, 4		# indice * dimensione
	# salvo il valore inserito da tastiera nel vettore
	sw $t2, vettore($t3)
	move $a0, $t2
	li $v0, 1
	syscall
	la $a0, tabulato
	li $v0, 4
	syscall
	add $t0, $t0, 1
	blt $t0, $t1, ciclo
	li $v0, 10
	syscall