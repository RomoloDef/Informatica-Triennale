.data
vettore: .space 400
numeroelementi: .word 100
.text
.globl main

main:
	li $t0, 0
	lw $t1, numeroelementi
	xor $t5, $t5, $t5
	li $v0, 5
	syscall
	move $t4, $a0
	
ciclo:
	bge $t0, $t1, fine
	li $v0, 42
	li $a1, 50
	syscall
	move $t2, $a0
	mul $t3, $t0, 4
	sw $t2, vettore($t3)
	addi $t0, $t0, 1
	blt $t0, $t1, ciclo
	beq $t4, $t2, trovato
	
trovato:
	move $a0, $t2
	li $v0, 1
	syscall
	addi $t5, $t5, 1
	move $a0, $t5
	li $v0, 1
	syscall
	j ciclo
	
fine:
	li $v0, 10
	syscall
	