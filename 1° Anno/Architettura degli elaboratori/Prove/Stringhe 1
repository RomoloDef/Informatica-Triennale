.data
stringa: .asciiz "Ciao a tutti"

.text
.globl main

main:
	xor $t0, $t0, $t0	# contatore carattere
	xor $t1, $t1, $t1	# indice della stringa
	li $v0, 12
	syscall
	move $a0, $v0
	move $t2, $a0
	
ciclo:
	lb $t9, stringa($t1)	# accedo all' i-esimo elemento
	bne $t9, $t2, non_trovato
	addi $t0, $t0, 1

non_trovato:
	addi $t1, $t1, 1
	bnez $t9, ciclo
	move $a0, $t0
	li $v0, 1
	syscall
	li $v0, 10
	syscall

